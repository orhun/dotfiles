[gpg]
	program = gpg
; [url "ssh://git@github.com/"]
;   insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
  insteadOf = https://bitbucket.org/
[url "ssh://git@gitlab.archlinux.org/"]
  insteadOf = https://gitlab.archlinux.org/
[alias]
	a = add
	aa = add -A
	ap = add -p
	b = bisect
	br = branch
	c = clone
	cb = checkout -b
	ck = checkout
	cm = commit
	cmt = commit -m
	cmta = commit --amend
	cmtf = commit --amend --no-edit
	cmtt = commit --allow-empty
	crds = config credential.helper store
	d = diff
	dc = diff --cached
	dm = diff HEAD~ --color-moved=dimmed-zebra
	dd = commit --dry-run
	f = fetch
	g = grep
	god = !echo "god is listening"
	godsays = !git commit -m \"$(curl -s https://godsays.xyz)\"
	i = init
	l = log
	la = log --pretty=format:'[%h] %cd - Committer: %cn (%ce), Author: %an (%ae)'
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ll = log --graph --decorate --oneline --all
	lo = log --graph --decorate --all
	ls = ls-files
	m = mv
	mr = merge
	new = checkout -b
	p = pull
	ps = push
	psmi = push origin main
	psmt = push origin master
	r = restore
	rb = rebase
	rm = rm
	rmt = remote -v
	rs = restore
	rst = restore --staged
	sh = show
	st = status
	t = tag
	stash-all = stash save --include-untracked
	reset-soft = reset --soft HEAD~
	stash-unstaged = stash --keep-index -u
	ups = config --get remote.origin.url
	yolo = !git commit -m \"$(curl -s https://whatthecommit.com/index.txt)\"
[commit]
	template = ~/.git-commit-template
	gpgsign = true
	verbose = true
[core]
	editor = nvim
  pager = delta --syntax-theme gruvbox-dark
	autcrlf = input
  attributesfile = ~/.gitattributes
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[merge]
  conflictstyle = diff3
; [merge "mergiraf"]
;     name = mergiraf
;     driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P
[diff]
  colorMoved = default
  external = difft
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
	default = current
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autocorrect = prompt
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[pull]
	rebase = true
